<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cupdata.voucher.dao.VoucherCategoryDao">

	<resultMap id="BaseResultMap" type="com.cupdata.commons.model.ElectronicVoucherCategory">
		<result column="ID" property="id" jdbcType="BIGINT"/>
		<result column="SUPPLIER_ID" property="supplierId" jdbcType="BIGINT"/>
		<result column="CATEGORY_NAME" property="categoryName" jdbcType="VARCHAR"/>
		<result column="VALID_STATUS" property="validStatus" jdbcType="VARCHAR"/>
		<result column="STOCK_WARNING" property="stockWarning" jdbcType="VARCHAR"/>
		<result column="CREATE_BY" property="createBy" jdbcType="VARCHAR"/>
		<result column="CREATE_DATE" property="createDate" jdbcType="DATE"/>
		<result column="UPDATE_BY" property="updateBy" jdbcType="VARCHAR"/>
		<result column="UPDATE_DATE" property="updateDate" jdbcType="DATE"/>
	</resultMap>

	<sql id="Base_Column_List">
		ID,
		SUPPLIER_ID,
		CATEGORY_NAME,
		VALID_STATUS,
		STOCK_WARNING,
		CREATE_BY,
		CREATE_DATE,
		UPDATE_BY,
		UPDATE_DATE
	</sql>

	<select id="selectSingle" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"/> FROM ELEC_VOUCHER_CATEGORY
		where 1=1
        <if test=" categoryId != null and categoryId != ''">
            and ID = #{categoryId}
        </if>
        and VALID_STATUS = '1'
	</select>
</mapper>