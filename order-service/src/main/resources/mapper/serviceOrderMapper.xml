<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cupdata.order.dao.ServiceOrderDao">

    <resultMap id="BaseResultMap" type="com.cupdata.order.entity.ServiceOrder">
        <result column="ID" property="id" jdbcType="INTEGER"/>
        <result column="ORDER_NO" property="orderNo" jdbcType="VARCHAR"/>
        <result column="ORG_NO" property="orgNo" jdbcType="VARCHAR"/>
        <result column="SUPPLIER_NO" property="supplierNo" jdbcType="VARCHAR"/>
        <result column="ORG_ORDER_NO" property="orgOrderNo" jdbcType="VARCHAR"/>
		<result column="SUPPLIER_ORDER_NO" property="supplierOrderNo" jdbcType="VARCHAR"/>
		<result column="ORG_PRICE" property="orgPrice" jdbcType="BIGINT"/>
		<result column="SUPPLIER_PRICE" property="supplierPrice" jdbcType="BIGINT"/>
		<result column="SETTLE_DATE" property="settleDate" jdbcType="VARCHAR"/>
		<result column="ORDER_STATUS" property="orderStatus" jdbcType="CHAR"/>
		<result column="ORDER_TYPE" property="orderType" jdbcType="CHAR"/>
		<result column="ORDER_DESC" property="orderDesc" jdbcType="VARCHAR"/>
		<result column="ORDER_FAIL_DESC" property="orderFailDesc" jdbcType="VARCHAR"/>
		<result column="IS_NOTIFY" property="isNotify" jdbcType="CHAR"/>
		<result column="NOTIFY_URL" property="notifyUrl" jdbcType="VARCHAR"/>
		<result column="NODE_NAME" property="nodeName" jdbcType="VARCHAR"/>
		<result column="CREATE_BY" property="createDate" jdbcType="VARCHAR"/>
        <result column="CREATE_DATE" property="createDate" jdbcType="DATE"/>
		<result column="UPDATE_BY" property="updateDate" jdbcType="VARCHAR"/>
        <result column="UPDATE_DATE" property="updateDate" jdbcType="DATE"/>
    </resultMap>
    
    
    <sql id="Base_Column_List">
	ID,
	ORDER_NO,
	ORG_NO,
	SUPPLIER_NO,
	ORG_ORDER_NO,
	SUPPLIER_ORDER_NO,
	ORG_PRICE,
	SUPPLIER_PRICE,
	SETTLE_DATE,
	ORDER_STATUS,
	ORDER_TYPE,
	ORDER_DESC,
	ORDER_FAIL_DESC,
	IS_NOTIFY,
	NOTIFY_URL,
	NODE_NAME,
	CREATE_BY,
	CREATE_DATE,
	UPDATE_BY,
	UPDATE_DATE
    </sql>
    
    
    <select id="select" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from SERVICE_ORDER
        where ID = #{id}
    </select>
    
     <select id="selectAll" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> Base_Column_List from SERVICE_ORDER
        where 1=1
        <if test=" id != null and id != ''">
				and ID = #{id}
		</if>
		 <if test=" orderNo != null and orderNo != ''">
				and ORDER_NO = #{orderNo}
		</if>
		 <if test=" bankCode != null and bankCode != ''">
				and BANK_CODE = #{bankCode}
		</if>
		 <if test=" orgNo != null and orgNo != ''">
				and ORG_NO = #{orgNo}
		</if>
		 <if test=" bankOrderNo != null and bankOrderNo != ''">
				and BANK_ORDER_NO = #{bankOrderNo}
		</if>
		 <if test=" supplyOrderNo != null and supplyOrderNo != ''">
				and SUPPLY_ORDER_NO = #{supplyOrderNo}
		</if>
		 <if test=" supplyNo != null and supplyNo != ''">
				and SUPPLY_NO = #{supplyNo}
		</if>
		 <if test=" productNo != null and productNo != ''">
				and PRODUCT_NO = #{productNo}
		</if>
		 <if test=" settleDate != null and settleDate != ''">
				and SETTLE_DATE = #{settleDate}
		</if>
		 <if test=" orderStatus != null and orderStatus != ''">
				and ORDER_STATUS = #{orderStatus}
		</if>
		 <if test=" subOrderNo != null and subOrderNo != ''">
				and SUB_ORDER_NO = #{subOrderNo}
		</if>		
    </select>

</mapper>